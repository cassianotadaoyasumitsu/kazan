        <% else %>
        <li class="nav-item">
          <%= link_to "User", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Tantosha", new_tantosha_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Employee", new_employee_session_path, class: "nav-link" %>
