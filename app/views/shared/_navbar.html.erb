      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "User", users_backoffice_pages_home_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Tantosha", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Employees", "#", class: "nav-link" %>
