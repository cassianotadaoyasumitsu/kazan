        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
        <% elsif tantosha_signed_in? %>
        <li class="nav-item">
          <%= link_to "Tantoshas", tantoshas_backoffice_pages_home_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Employees", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Requests", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_tantosha_session_path, method: :delete, class: "nav-link" %>
        </li>
        <% elsif employee_signed_in? %>
        <li class="nav-item">
          <%= link_to "Employees", employees_backoffice_employee_path(current_employee), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Requests", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_employee_session_path, method: :delete, class: "nav-link" %>
