<div class="card-body table-responsive">
  <table class="table table-hover">
    <thead class="text-warning">
      <th>ID</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Factory</th>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.factory %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
