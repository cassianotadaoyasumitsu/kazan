<div class="container">
  <div class="employee_dashboard">

    <h4>Users</h4>

    <div class="employee_dashboard_btn">
      <%= link_to new_user_path, class: 'user_dashboard_link' do %>
        <i class="fas fa-plus-circle"></i> New user
      <% end %>
    </div>

    <div class="employee_dashboard_border">
    <ul class="list-group mb-3">
      <% @users.each do |user| %>
      <li class="list-group-item">
        <div class="row justify-content-between align-items-center">
          <div>
            <strong><%= user.name %><%= user.ref %></strong>
          </div>
          <div>
            <%= link_to user_path(user), class: 'btn btn-primary' do %>
              <i class="fas fa-eye"></i>
            <% end %>
            <%= link_to edit_user_path(user), class: 'btn btn-secondary' do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to user_path(user), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure whant to delete?' }  do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
    </div>
  </div>
</div>
